<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sv.gauge.MainActivity">

    <!--background image-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="1.0"
            android:background="@color/colorHeader"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/company_logo_transparent" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/app_name" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="95dp"
            android:background="@drawable/d_start_button"
            android:rotation="45" />

        <Button
            android:id="@+id/btn_sync"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="95dp"
            android:background="@drawable/d_sync_button"
            android:rotation="45" />

        <Button
            android:id="@+id/btn_reports"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/d_report_button"
            android:rotation="45" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/d_logout_button"
            android:rotation="45" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        android:background="@color/colorHeader">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/maintenance_devision_text" />
    </RelativeLayout>

</RelativeLayout>
